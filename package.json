{
  "name": "google-function-authorizer",
  "version": "0.2.0",
  "description": "User authentication library for Google HTTP Functions",
  "keywords": [
    "google cloud",
    "google cloud platform",
    "google cloud functions",
    "google datastore",
    "authentication",
    "authenticator",
    "authorization",
    "authorizer",
    "serverless"
  ],
  "main": "index.js",
  "scripts": {
    "test": "standard --fix && nyc mocha",
    "report": "npm install -g codeclimate-test-reporter && codeclimate-test-reporter < coverage/lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pauloddr/google-function-authorizer.git"
  },
  "author": "@pauloddr",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pauloddr/google-function-authorizer/issues"
  },
  "homepage": "https://github.com/pauloddr/google-function-authorizer#readme",
  "dependencies": {
    "@google-cloud/datastore": "1.4.0",
    "bcrypt": "2.0.1",
    "client-sessions": "0.8.0",
    "gstore-node": "1.2.0"
  },
  "devDependencies": {
    "body-parser": "1.17.1",
    "chai": "3.5.0",
    "chai-http": "3.0.0",
    "dotenv": "4.0.0",
    "express": "4.15.2",
    "mocha": "3.3.0",
    "nyc": "10.3.0",
    "standard": "*"
  },
  "nyc": {
    "include": [
      "index.js",
      "lib/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary",
      "html"
    ]
  },
  "standard": {
    "env": "mocha",
    "ignore": ["support", "test", "lib/password.js"]
  }
}
